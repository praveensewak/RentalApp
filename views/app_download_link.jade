- affiliates = typeof(affiliates) != 'undefined' ? affiliates : { }
extends layout
block content
    link(rel="stylesheet" href="css/passenger_signup.css")
    include registration_header
    section(class="container")
        h1 Request app download link
        #update-payment-MSG(style='margin-top: 25px;')
            div.alert.hide(style='padding: 10px;')
