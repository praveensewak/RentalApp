                input(type="text" name="city" placeholder="city" id="city-tf" maxlength='50')
                span
            fieldset
                span
                    span(class="glyphicon-envelope")
                select(name='affiliate' value= '' placeholder='Affiliate' id='affiliate-tf',)
                    option(value='') Select Affiliate
                        each item, i in affiliates
                            option(value='#{item._id}') #{item.name}
            fieldset
                span
                input(type="text" name="comments" placeholder="Enter Link Request" id="comments-tf" maxlength='100')
                span
            input(type="hidden", id="fra", name="fra",value= 'false')
            input(type="hidden", id="_id", name="_id",value= user._id)
            input(type="hidden", id="registration_token", name="registration_token",value= user.registration_token)
            button(type="submit" id="account-form-btn2") submit
            button(type="reset" id="account-form-btn1") cancel
            include modals/alert
            include modals/form-errors
