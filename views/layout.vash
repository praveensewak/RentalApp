<!doctype html>
<html>
<head>
  <title>@model.title</title>
  <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />

  @html.block("head")
      <script src="/lib/jquery/jquery-1.9.1.js"></script>
      <script src="/lib/jquery/jquery.mask.js"></script>
      <script src="/dist/jquery.validate.js"></script>
  <link href="/css/site.css" rel="stylesheet" />
  <style>
  .cmxform fieldset p.error label { color: red; }
  #div_notification {
  	background-color: #eee;
  	border: 1px solid red;
  	margin: 5px;
  	padding: 5px;
  }
  #div_notification ol li {
  	list-style-type: disc;
  	margin-left: 20px;
  }
  #div_notification { display: none }
  .container label.error {
  	display: inline;
  }
  form.cmxform { width: 30em; }
  form.cmxform label.error {
  	display: block;
  	margin-left: 1em;
  	width: auto;
  }
  </style>
</head>
<body>
  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button class="btn btn-success navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="glyphicon glyphicon-chevron-down"></span>
        </button>
        <div id="logo">
          <a href='/'>
            <h4>taxi Web Portal</h4>
          </a>
          @if (model.user) {
            <div>@model.user.first_name @model.user.last_name</div>
          }
        </div>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="nav">
            <a href="/">Home</a>
          </li>
           @if (!model.user) {
          <li class="nav">
            <a href="/register">Register</a>
          </li>
          }
          @if (!model.user) {
          <li class="nav">
                                                       <a href="/login">Login</a>
                                                        </li>
                                                        }
                                                        @if (model.user) {
                                                        <li class="nav">
                                                                                                     <a href="/logout">Log out</a>
                                                                                                      </li>
}



        </ul>
      </div>
    </div>
  </div>

  <section id="body" class="container">
    <div class="page-header">
      <h1>@model.title</h1>
    </div>
    @html.block("body")
  </section>
  <hr />
  <footer class="container">
    <p>taxi Web Portal</p>
  </footer>

  <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/lib/underscore/underscore.js"></script>
  <script src="/lib/angular/angular.min.js"></script>
  <script src="/lib/angular-bootstrap/ui-bootstrap.min.js"></script>
  @html.block("scripts")

</body>
</html>
