extends layout
block content
    .container
        #login-container2.mainbox.col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2(style='margin-top: 50px;')
            .panel.panel-info
                .panel-heading
                    .panel-title Verifiy you account
                .panel-body(style='padding-top: 30px;')
                    form( method="post")#verify-form.form-horizontal(role='form')
                        p.subheading Verification code has been sent on your registered phone number, Please enter you verification code to verify your account
                        .input-group(style='margin-top: 10px;margin-bottom: 10px;')
                            span.input-group-addon Verification Code
                            input#registration_code-tf.form-control(type='text', name='registration_code', placeholder='Verification Code')
                        button(type="submit")#btn-verify.btn.btn-primary
                            i.icon-lock.icon-white
                            | Verify
    include modals/alert
    include modals/form-errors
        block scripts
    script(src='/lib/jquery/jquery-1.10.2.min.js')
    script(src='/lib/bootstrap/dist/js/bootstrap.min.js')
    script(src='/vendor/jquery.form.js')
    script(src='/vendor/bootstrap-modal.js')
    script(src='/vendor/bootstrap-transition.js')
    script(src='/js/views/verify.js')
    script(src='/js/controllers/verifyController.js')
    script(src='/js/form-validators/verifyValidator.js')